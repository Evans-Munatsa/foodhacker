<%= simple_form_for(@product) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :food_type %>
    <%= f.cktext_area :description, id: "description", input_html: { class: 'form-control'}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
